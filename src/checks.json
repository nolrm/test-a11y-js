{
  "version": "0.2.0",
  "checks": {
    "image-alt": {
      "ruleId": "test-a11y-js/image-alt",
      "method": "checkImageAlt",
      "elements": ["img"],
      "attributes": {
        "required": ["alt"],
        "checked": ["alt"]
      },
      "violations": [
        {
          "id": "missingAlt",
          "description": "Image must have an alt attribute",
          "impact": "serious",
          "condition": "Element lacks 'alt' attribute"
        },
        {
          "id": "emptyAlt",
          "description": "Image alt attribute must not be empty",
          "impact": "serious",
          "condition": "Element has empty 'alt' attribute (alt='')"
        },
        {
          "id": "dynamicAlt",
          "description": "Image alt attribute is dynamic. Ensure it is not empty at runtime.",
          "impact": "warning",
          "condition": "Element has dynamic 'alt' attribute (e.g., alt={variable})"
        }
      ],
      "validPatterns": [
        "<img src='photo.jpg' alt='Description' />",
        "<img src='photo.jpg' alt='' role='presentation' />"
      ]
    },
    "button-label": {
      "ruleId": "test-a11y-js/button-label",
      "method": "checkButtonLabel",
      "elements": ["button"],
      "attributes": {
        "checked": ["aria-label"],
        "content": true
      },
      "violations": [
        {
          "id": "missingLabel",
          "description": "Button must have a label or aria-label",
          "impact": "critical",
          "condition": "Button has no text content AND no 'aria-label' attribute"
        },
        {
          "id": "dynamicLabel",
          "description": "Button label is dynamic. Ensure it is not empty at runtime.",
          "impact": "warning",
          "condition": "Button has dynamic 'aria-label' (e.g., aria-label={variable})"
        }
      ],
      "validPatterns": [
        "<button>Click me</button>",
        "<button aria-label='Close menu'></button>",
        "<button aria-label='Close menu'>Ã—</button>"
      ]
    },
    "link-text": {
      "ruleId": "test-a11y-js/link-text",
      "method": "checkLinkText",
      "elements": ["a"],
      "attributes": {
        "checked": ["aria-label"],
        "content": true
      },
      "violations": [
        {
          "id": "missingText",
          "description": "Link must have descriptive text",
          "impact": "serious",
          "condition": "Link has no text content AND no 'aria-label'"
        },
        {
          "id": "nonDescriptive",
          "description": "Link text should be more descriptive (avoid 'click here', 'read more', etc.)",
          "impact": "moderate",
          "condition": "Link text is 'click here', 'read more', or 'more'"
        },
        {
          "id": "dynamicText",
          "description": "Link text is dynamic. Ensure it is descriptive at runtime.",
          "impact": "warning",
          "condition": "Link has dynamic text content"
        }
      ],
      "nonDescriptiveTexts": ["click here", "read more", "more"],
      "validPatterns": [
        "<a href='/about'>About Us</a>",
        "<a href='/about' aria-label='Learn more about us'>Read more</a>"
      ]
    },
    "form-label": {
      "ruleId": "test-a11y-js/form-label",
      "method": "checkFormLabels",
      "elements": ["input", "select", "textarea"],
      "attributes": {
        "required": ["id", "for", "htmlFor"],
        "checked": ["id", "aria-label", "aria-labelledby", "for", "htmlFor"]
      },
      "labelAssociation": {
        "method1": {
          "description": "id/for association",
          "required": ["id on input", "for/htmlFor on label"],
          "pattern": "<label for='name'>Name</label><input id='name' />"
        },
        "method2": {
          "description": "aria-label",
          "required": ["aria-label on input"],
          "pattern": "<input type='text' aria-label='Name' />"
        },
        "method3": {
          "description": "aria-labelledby",
          "required": ["aria-labelledby on input", "id on label element"],
          "pattern": "<span id='name-label'>Name</span><input aria-labelledby='name-label' />"
        }
      },
      "violations": [
        {
          "id": "missingLabel",
          "description": "Form control must have an associated label (use id/for, aria-label, or aria-labelledby)",
          "impact": "critical",
          "condition": "Form control has no label association via any method"
        }
      ],
      "validPatterns": [
        "<label htmlFor='email'>Email</label><input id='email' type='email' />",
        "<input type='text' aria-label='Name' />",
        "<span id='email-label'>Email</span><input type='email' aria-labelledby='email-label' />"
      ]
    },
    "heading-order": {
      "ruleId": "test-a11y-js/heading-order",
      "method": "checkHeadingOrder",
      "elements": ["h1", "h2", "h3", "h4", "h5", "h6"],
      "attributes": {
        "checked": []
      },
      "violations": [
        {
          "id": "skippedLevel",
          "description": "Heading level skipped (previous: {previous}, current: {current})",
          "impact": "moderate",
          "condition": "Heading level jumps by more than 1 (e.g., h1 to h3)"
        }
      ],
      "validPatterns": [
        "<h1>Title</h1><h2>Subtitle</h2><h3>Section</h3>",
        "<h2>First</h2><h2>Second</h2><h3>Section</h3>"
      ],
      "invalidPatterns": [
        "<h1>Title</h1><h3>Section</h3>",
        "<h2>Subtitle</h2><h4>Subsection</h4>"
      ]
    },
    "iframe-title": {
      "ruleId": "test-a11y-js/iframe-title",
      "method": "checkIframeTitle",
      "elements": ["iframe"],
      "attributes": {
        "required": ["title"],
        "checked": ["title"]
      },
      "violations": [
        {
          "id": "missingTitle",
          "description": "iframe must have a title attribute",
          "impact": "serious",
          "condition": "Element lacks 'title' attribute"
        },
        {
          "id": "emptyTitle",
          "description": "iframe title attribute must not be empty",
          "impact": "serious",
          "condition": "Element has empty 'title' attribute (title='')"
        },
        {
          "id": "dynamicTitle",
          "description": "iframe title attribute is dynamic. Ensure it is not empty at runtime.",
          "impact": "warning",
          "condition": "Element has dynamic 'title' attribute (e.g., title={variable})"
        }
      ],
      "validPatterns": [
        "<iframe src='https://example.com' title='Example website' />",
        "<iframe src='https://example.com' title='Embedded content' />"
      ]
    },
    "fieldset-legend": {
      "ruleId": "test-a11y-js/fieldset-legend",
      "method": "checkFieldsetLegend",
      "elements": ["fieldset"],
      "attributes": {
        "checked": []
      },
      "violations": [
        {
          "id": "fieldset-legend",
          "description": "fieldset must have a legend element as a direct child",
          "impact": "serious",
          "condition": "Element lacks 'legend' as direct child"
        },
        {
          "id": "fieldset-legend-empty",
          "description": "fieldset legend must have non-empty text content",
          "impact": "serious",
          "condition": "Element has empty 'legend' text content"
        }
      ],
      "validPatterns": [
        "<fieldset><legend>Personal Information</legend><input /></fieldset>",
        "<fieldset><legend>Contact Details</legend></fieldset>"
      ]
    },
    "table-structure": {
      "ruleId": "test-a11y-js/table-structure",
      "method": "checkTableStructure",
      "elements": ["table"],
      "attributes": {
        "checked": ["caption", "aria-label", "aria-labelledby", "scope"]
      },
      "violations": [
        {
          "id": "table-caption",
          "description": "Table must have a caption or aria-label/aria-labelledby",
          "impact": "serious",
          "condition": "Element lacks 'caption' child AND 'aria-label'/'aria-labelledby' attributes"
        },
        {
          "id": "table-headers",
          "description": "Table must have header cells (th elements) when it has data cells",
          "impact": "serious",
          "condition": "Table has data cells (td) but no header cells (th)"
        },
        {
          "id": "table-header-scope",
          "description": "Table header cells (th) should have a scope attribute",
          "impact": "moderate",
          "condition": "Header cell (th) lacks 'scope' attribute"
        }
      ],
      "validPatterns": [
        "<table><caption>Test Table</caption><tr><th scope='col'>Header</th></tr><tr><td>Data</td></tr></table>",
        "<table aria-label='Test Table'><tr><th scope='row'>Header</th><td>Data</td></tr></table>"
      ]
    },
    "details-summary": {
      "ruleId": "test-a11y-js/details-summary",
      "method": "checkDetailsSummary",
      "elements": ["details"],
      "attributes": {
        "checked": []
      },
      "violations": [
        {
          "id": "details-summary",
          "description": "details element must have a summary element as its first child",
          "impact": "serious",
          "condition": "Element lacks 'summary' as first child"
        },
        {
          "id": "details-summary-empty",
          "description": "details summary element must have non-empty text content",
          "impact": "serious",
          "condition": "Element has empty 'summary' text content"
        }
      ],
      "validPatterns": [
        "<details><summary>Click to expand</summary><div>Content</div></details>",
        "<details><summary>More information</summary></details>"
      ]
    }
  },
