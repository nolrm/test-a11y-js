{
  "name": "test-a11y-js",
  "version": "0.1.0",
  "description": "A JavaScript library for testing component accessibility across multiple testing frameworks",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "testing",
    "components",
    "vitest",
    "unit-testing",
    "wcag"
  ],
  "author": "Marlon Maniti (https://github.com/nolrm)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nolrm/test-a11y-js.git"
  },
  "bugs": {
    "url": "https://github.com/nolrm/test-a11y-js/issues"
  },
  "homepage": "https://github.com/nolrm/test-a11y-js#readme",
  "dependencies": {},
  "peerDependencies": {
    "vitest": ">=0.30.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.0.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.30.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/compiler-sfc": "^3.3.0",
    "@types/vue": "^2.0.0",
    "vue": "^3.3.0",
    "eslint": "^8.37.0",
    "happy-dom": "^9.10.9",
    "typescript": "^5.3.0",
    "vitest": "^0.30.0",
    "tsup": "^7.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}